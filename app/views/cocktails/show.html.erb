<div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">

        <h1>
           <%= @cocktail.name %>
        </h1>

        <% @cocktail.doses.each do |dose|  %>
        <ul>
          <li>
            <%= dose.description %>
            <%= dose.ingredient.name %>
            <%= link_to '', dose_path(dose), method: :delete, :id => "logo-size", :class => "far fa-trash-alt" %>
          </li>
        </ul>
        <% end  %>

  <hr>
  <p> <%= link_to 'add description', new_cocktail_dose_path(@cocktail) %> </p>

      </div>
    </div>
  </div>


